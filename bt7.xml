<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
    android:stretchColumns="*"
    tools:context="me.duydev.baitapbai4.BaiTap7">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/calcView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="4"
            android:maxLength="9"
            android:text="0"
            android:textAlignment="viewEnd"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/calcClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:onClick="btnPress"
            android:text="Clear" />

        <Button
            android:id="@+id/calcDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:onClick="btnPress"
            android:text="Del" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/calcNum7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="7" />

        <Button
            android:id="@+id/calcNum8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="8" />

        <Button
            android:id="@+id/calcNum9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="9" />

        <Button
            android:id="@+id/calcDevide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="/" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/calcNum4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="4" />

        <Button
            android:id="@+id/calcNum5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="5" />

        <Button
            android:id="@+id/calcNum6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="6" />

        <Button
            android:id="@+id/calcMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="x" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/calcNum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="1" />

        <Button
            android:id="@+id/calcNum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="2" />

        <Button
            android:id="@+id/calcNum3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="3" />

        <Button
            android:id="@+id/calcMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="-" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/calcDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="." />

        <Button
            android:id="@+id/calcNum0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="0" />

        <Button
            android:id="@+id/calcEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="=" />

        <Button
            android:id="@+id/calcPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnPress"
            android:text="+" />
    </TableRow>
</TableLayout>
